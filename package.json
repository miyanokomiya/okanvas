{
  "name": "okanvas",
  "version": "0.0.4",
  "main": "./dist/okanvas.min.js",
  "module": "./dist/okanvas.esm.min.js",
  "types": "./dist/okanvas.d.ts",
  "sideEffects": false,
  "repository": "https://github.com/miyanokomiya/okanvas.git",
  "author": "miyanokomiya <tomoya.hstexze24632@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "demo": "parcel demo/index.html",
    "lint:es": "yarn eslint ./src ./test ./demo ./*.js --ext .js,.ts",
    "lint:json": "yarn prettier -c ./*.json ./.*.json",
    "lint": "yarn lint:es && yarn lint:json",
    "lint:fix": "yarn lint:es --fix && yarn lint:json --write",
    "test": "jest --coverage",
    "build": "rm -rf ./dist && yarn bili --format cjs-min --format esm-min",
    "build:demo": "rm -rf ./dist-demo && parcel build demo/index.html -d ./dist-demo --public-url .",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-jest": "^27.0.6",
    "bili": "^5.0.5",
    "canvas": "^2.8.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^26.2.2",
    "jsdom": "^19.0.0",
    "parcel-bundler": "^1.12.5",
    "preact": "^10.5.14",
    "prettier": "^2.5.1",
    "rollup-plugin-typescript2": "^0.31.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.7.4"
  },
  "dependencies": {}
}
